<h1>Listing sensors</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Description</th>
    <th>Min</th>
    <th>Max</th>
    <th>Unit</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sensors.each do |sensor| %>
  <tr>
    <td><%= sensor.code %></td>
    <td><%= sensor.description %></td>
    <td><%= sensor.min %></td>
    <td><%= sensor.max %></td>
    <td><%= sensor.unit %></td>
    <td><%= link_to 'Show', sensor %></td>
    <td><%= link_to 'Edit', edit_sensor_path(sensor) %></td>
    <td><%= link_to 'Destroy', sensor, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

